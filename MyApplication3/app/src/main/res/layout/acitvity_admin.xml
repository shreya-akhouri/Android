<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST MESSAGE---"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/e10"
        android:layout_toStartOf="@+id/ba9" />

    <TextView
        android:id="@+id/t10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="For knowing students detail click here!"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/e10" />

    <EditText
        android:id="@+id/e10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ba1"
        android:layout_alignEnd="@+id/imageView2" />

    <Button
        android:id="@+id/b10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST"
        android:layout_alignStart="@+id/t10"
        android:layout_alignTop="@+id/ba1" />

    <Button
        android:id="@+id/ba1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW SUGGESTION"
        android:layout_above="@+id/t10"
        android:layout_toEndOf="@+id/b10"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="28dp" />

    <Button
        android:id="@+id/ba9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="LOGOUT" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vit"
        android:layout_below="@+id/ba9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />
</RelativeLayout>