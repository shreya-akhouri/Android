<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shreya.myapplication.Main5Activity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter old password:"
        android:layout_alignBottom="@+id/e70"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:id="@+id/e70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/e71"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new password:"
        android:layout_above="@+id/b70"
        android:layout_toStartOf="@+id/b70"
        android:layout_marginBottom="63dp" />

    <EditText
        android:id="@+id/e71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/e70"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/b70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vit"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/e70"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <Button
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="LOGOUT" />
</RelativeLayout>
